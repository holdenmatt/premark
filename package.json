{
  "name": "@holdenmatt/premark",
  "version": "0.0.2",
  "description": "A markdown preprocessor for composable instructions",
  "author": "Matt Holden",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/holdenmatt/premark"
  },
  "homepage": "https://github.com/holdenmatt/premark",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "ultracite lint",
    "format": "ultracite format",
    "prepublishOnly": "pnpm build && pnpm test"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@types/node": "^24.3.0",
    "lint-staged": "^16.1.5",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "ultracite": "5.2.4",
    "vitest": "^3.2.4"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "premark": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "packageManager": "pnpm@10.11.0",
  "lint-staged": {
    "*.{ts,tsx,json,jsonc,md}": [
      "pnpm dlx ultracite format"
    ]
  }
}
